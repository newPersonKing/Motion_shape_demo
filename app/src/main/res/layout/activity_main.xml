<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/btn_four_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="四个小方块"/>

    <Button
        android:id="@+id/btn_arc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_arc"/>


    <Button
        android:id="@+id/btn_diagonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_diagonal"/>

    <Button
        android:id="@+id/btn_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_movie"/>

    <Button
        android:id="@+id/btn_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_shape"/>

</LinearLayout>